    <div class="section">

      <div class="container">
        <div class="row">
          <div class="col-md-12 text-center">
            <h1 class="text-left">
              <i class="fa fa-3x fa-fw fa-book"></i>
              <b>
                <i class="">Truyện Song Ngữ Anh-Việt</i>
              </b>
            </h1>
          </div>
          <div class="row">
            <div class="col-md-12">
              <hr>
            </div>
          </div>
        </div>
      </div>

      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <div class="panel panel-primary">
              <div class="panel-heading">
                <h1 class="panel-title text-warning"><%=@truyen.name_vn%></h1>
                <h1 class="panel-title text-warning"><%=@truyen.name_en%></h1>
              </div>
              <div class="panel-body">
                <p class="text-center"><%="Thời điểm cập nhật: #{time_ago_in_words(@truyen.updated_at.in_time_zone(7))} ago"%></p>
                <p class="text-center"><%="Thể Loại: #{@truyen.theloai.title}"%></p>
                <p class="text-center"><%="Tên Tiếng Việt: #{@truyen.name_vn} "%></p>
                <p class="text-center"><%="Tên Tiếng Anh: #{@truyen.name_en} "%></p>
              </div>
            </div>
          </div>
        </div>
      </div>

    <div class="section">

      <div class="container">
        <div class="row">
          <div class="col-md-6"><h1 class="text-center"><%=@truyen.name_vn%></h1></div>
	  <div class="col-md-6"><h1 class="text-center"><%=@truyen.name_en%></h1></div>
        </div>
        <br>
        <div class="row">
          <div class="col-md-6" align = "justify"><div class="section"><b class="lead"><%= simple_format(@truyen.content_vn)%></b></div></div>
          <div class="col-md-6" align = "justify"><div class="section"><b class="lead"><%= simple_format(@truyen.content_en)%></b></div></div>
        </div>
      </div>

      <div class="modal fade">
        <div class="modal-dialog"></div>
      </div>
      <div class="panel panel-primary">
        <div class="panel-heading"></div>
      </div>

    <footer class="section section-primary">
        <div class="background-image"></div>
        <div class="container">
          <div class="row">
            <div class="col-md-12">
                <div class="panel panel-primary">
                  <div class="panel-heading">
                    <h2 class="panel-title text-left" contenteditable="true">
                      <i class="fa fa-star fa-fw"></i>Bình luận:</h2>
                    </div>

                    <div class="container">
                      <% @binhluans.each do |t| %>
        		<div class="">
		          <div class="col-md-12">
                            <h3><%= t.user_id%> : <%= t.content%></h3>
		            <br><%= t.created_at%></br>
		          </div>
        	   	</div>
        	     <% end %>
                    </div>
                  </div>
		<div class="panel-body">
                    <%= form_for (@binhluan) do |f| %>
                      <p>
                        <%= f.text_field :content ,class: "form-control"%>
                        <%= f.hidden_field :truyen_id, :value => @truyen.id %>
                        <% if current_user %>
                        <%= f.hidden_field :user_id, :value => @user.email%>
                        <% else %>
                        <%= f.hidden_field :user_id, :value => "anonymous"%>
                        <% end %>
                      </p>
                      <%= f.submit "Gửi bình luận",class: "btn btn-lg btn-success" %>
                      <%end%>
                    </div>
                </div>
              </div>
            </div>
          </footer>

      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <hr>
          </div>
          <p>FAM-Truyện Song Ngữ</p>
        </div>
      </div>

      <p><div class="fb-comments" data-href="http://truyensongngu.herokuapp.com/truyen/<%=@truyen.id%>" data-width="100%" data-numposts="15"></div></p>

    </div>
</div>
  </body>
  </html>
